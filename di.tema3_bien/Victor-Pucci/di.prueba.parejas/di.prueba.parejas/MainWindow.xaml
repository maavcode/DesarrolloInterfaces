<Window x:Class="di.prueba.parejas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.prueba.parejas"
        mc:Ignorable="d" Background="Transparent" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" 
        Title="MainWindow" Height="750" Width="1300">
    <Border CornerRadius="10" BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#6D2FFF" Offset="0" />
                <GradientStop Color="#FB539B" Offset="0.5" />
                <GradientStop Color="#836EFB" Offset="1" />
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0" >
                <GradientStop Color="#060531" Offset="0" />
                <GradientStop Color="#1B1448" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>
        <DockPanel>
            <Border DockPanel.Dock="Left" Width="250" CornerRadius="10,0,0,10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="#29105F" Offset="1" />
                        <GradientStop Color="#210F55" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <!-- Parte Izquierda -->
                <StackPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                    </Grid>
                    <Image Source="/Iconos/matisse.png" Grid.Row="0" Width="20" HorizontalAlignment="Left" Margin="15,30,0,0"/>
                    <TextBlock Text="DESARROLLO DE INTERFACES" Grid.Row="0" Foreground="White" FontSize="15" Margin="40,-24,0,30"/>
                    
                    
                    <Button Grid.Row="1" Width="250" Background="Transparent" BorderBrush="Transparent"
                            HorizontalAlignment="Left" HorizontalContentAlignment="Left" Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Iconos/inicio.png" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Inicio" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    
                    
                    <Button Grid.Row="2" Width="250" Background="Transparent" BorderBrush="Transparent"
        HorizontalAlignment="Left" HorizontalContentAlignment="Left" Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Iconos/grupo.png" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Clientes" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    
                    
                    <Button Grid.Row="3" Width="250" Background="Transparent" BorderBrush="Transparent"
        HorizontalAlignment="Left" HorizontalContentAlignment="Left" Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Iconos/reparto.png" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Pedido" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    
                    
                    <Button Grid.Row="4" Width="250" Background="Transparent" BorderBrush="Transparent"
        HorizontalAlignment="Left" HorizontalContentAlignment="Left" Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Iconos/bolsa.png" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Transacción" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    
                    
                    <Button Grid.Row="5" Width="250" Background="Transparent" BorderBrush="Transparent"
        HorizontalAlignment="Left" HorizontalContentAlignment="Left" Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Iconos/stock.png" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Stock" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    
                    
                    <Button Grid.Row="6" Width="250" Background="Transparent" BorderBrush="Transparent"
        HorizontalAlignment="Left" HorizontalContentAlignment="Left" Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Iconos/ventas.png" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Ventas" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    
                    
                    <Button Grid.Row="7" Width="250" Background="Transparent" BorderBrush="Transparent"
        HorizontalAlignment="Left" HorizontalContentAlignment="Left" Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Iconos/chart.png" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Informes" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    
                    
                    <Button Grid.Row="8" Width="250" Background="Transparent" BorderBrush="Transparent"
        HorizontalAlignment="Left" HorizontalContentAlignment="Left" Padding="15">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Iconos/configuracion.png" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Configuracion" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <Border CornerRadius="10,0,0,10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="#0A003A" Offset="1" />
                        <GradientStop Color="#1C0C49" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="35" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,5,0" FlowDirection="RightToLeft" Background="Transparent">
                        <Button Background="Transparent" BorderBrush="Transparent" x:Name="btnCerrar" Click="btnCerrar_Click">
                            <Image Source="/Iconos/x.png" Margin="2" />
                        </Button>
                        <Button Background="Transparent" BorderBrush="Transparent" Margin="10,0,0,0" >
                            <Image Source="/Iconos/max.png" Margin="4" />
                        </Button>
                        <Button Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Bottom"
                                Margin="10,0,0,2" Height="20" >
                            <Image Source="/Iconos/min.png"  />
                        </Button>
                    </StackPanel>
                    <!-- Parte Superior -->
                    <Grid Grid.Row="1">
                        <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                            <Image Source="/Iconos/homeblanco.png" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="INICIO" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                        <Button Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Right" Margin="0,0,320,0">
                            <Image Source="/Iconos/bell.png" Height="22"/>
                        </Button>
                        <Button Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Right" Margin="0,0,285,0">
                            <Image Source="/Iconos/carta.png" Height="22"/>
                        </Button>
                        <Button Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Right" Margin="0,0,250,0">
                            <Image Source="/Iconos/clock.png" Height="22"/>
                        </Button>
                        <Image Source="/Iconos/user.png" Height="27" HorizontalAlignment="Right" Margin="0,0,215,0"/>
                        <TextBlock Text="Usuario no ha iniciado sesión" Foreground="White" HorizontalAlignment="Right" Margin="10,10,50,0"/>
                        <Image Source="/Iconos/down.png" HorizontalAlignment="Right" Height="22" Margin="0,0,15,0"/>
                    </Grid>
                    <!-- Parte Central -->
                    <ContentControl Grid.Row="2" Margin="20" Background="#29105F">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Border CornerRadius="12" Padding="10" Margin="5" Width="220" Height="80" Grid.Column="0" VerticalAlignment="Top">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#785CFF" Offset="0"/>
                                        <GradientStop Color="#76A1FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="/Iconos/grupoblanco.png" Width="42" Height="42" Margin="0,0,32,0"/>
                                    <TextBlock Text="480" Foreground="White" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <Image Source="/Iconos/linegraph.png" Width="45" Height="45" Margin="30,25,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border CornerRadius="12" Padding="10" Margin="5" Width="220" Height="80" Grid.Column="1" VerticalAlignment="Top">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#76A5FF" Offset="0"/>
                                        <GradientStop Color="#40CDF4 " Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="/Iconos/camion.png" Width="42" Height="42" Margin="0,0,32,0"/>
                                    <TextBlock Text="720" Foreground="White" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <Image Source="/Iconos/grafico.png" Width="42" Height="42" Margin="30,20,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border CornerRadius="12" Padding="10" Margin="5" Width="220" Height="80" Grid.Column="2" VerticalAlignment="Top">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#FF689C" Offset="0"/>
                                        <GradientStop Color="#FFAAAC" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="/Iconos/bag.png" Width="42" Height="42" Margin="0,0,32,0"/>
                                    <TextBlock Text="640" Foreground="White" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <Image Source="/Iconos/choice.png" Width="42" Height="42" Margin="30,20,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border CornerRadius="12" Padding="10" Margin="5" Width="310" Height="120" Grid.Column="3" VerticalAlignment="Top">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#FFA8AD" Offset="0"/>
                                        <GradientStop Color="#7DA3FD" Offset="2"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="/Iconos/discos.png" Width="42" Height="30" Margin="-8,-70,0,0"/>
                                    <TextBlock Text="Tu Saldo" Foreground="White" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Center" Margin="20,-30,0,0"/>
                                    <TextBlock Text="1.230€" Foreground="White" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="-60,5,0,0"/>
                                    <Image Source="/Iconos/chart96.png" Width="82" Height="82" Margin="60,20,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.ColumnSpan="2" CornerRadius="12" Width="450" Height="250" VerticalAlignment="Top" Margin="0,100" SnapsToDevicePixels="True">
                                <Border.Background>
                                    <ImageBrush ImageSource="/Imagenes/PieChart.jpg"/>
                                </Border.Background>
                            </Border>

                            <Border Grid.ColumnSpan="1" Grid.Column="2" CornerRadius="12" Width="220" Height="250" VerticalAlignment="Top" Margin="0,100" SnapsToDevicePixels="True">
                                <Border.Background>
                                    <ImageBrush ImageSource="/Imagenes/BarChart.jpg" />
                                </Border.Background>
                            </Border>
                            <Border Grid.ColumnSpan="3" Grid.Column="0" CornerRadius="12" Width="680" Height="280" VerticalAlignment="Bottom" Margin="0,0" SnapsToDevicePixels="True">
                                <Border.Background>
                                    <ImageBrush ImageSource="/Imagenes/LineChart.jpg" />
                                </Border.Background>
                            </Border>
                            <Border Width="305" Height="510" CornerRadius="12" Margin="10,140,0,0"
        VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="4"
        Padding="15">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#2C1463" Offset="0"/>
                                        <GradientStop Color="#1A0F44" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <StackPanel>
                                    <TextBlock Text="Últimos Movimientos"
                   Foreground="White"
                   FontWeight="Bold"
                   FontSize="18"
                   HorizontalAlignment="Left"
                   Margin="0,5,0,15"/>

                                    <!-- Movimiento 1 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Iconos/deposito.png" Width="30" Height="30"
                   Grid.Column="0" VerticalAlignment="Center"/>
                                        <TextBlock Text="DEPÓSITO" Foreground="White" FontSize="15"
                       Grid.Column="1" VerticalAlignment="Center"
                       HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                        <TextBlock Text="1234" Foreground="White" FontSize="15"
                       FontWeight="Bold" Grid.Column="2"
                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Movimiento 2 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Iconos/deposito.png" Width="30" Height="30"
                   Grid.Column="0" VerticalAlignment="Center"/>
                                        <TextBlock Text="DEPÓSITO" Foreground="White" FontSize="15"
                       Grid.Column="1" VerticalAlignment="Center"
                       HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                        <TextBlock Text="1500" Foreground="White" FontSize="15"
                       FontWeight="Bold" Grid.Column="2"
                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Movimiento 3 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Iconos/transferencia.png" Width="30" Height="30"
                   Grid.Column="0" VerticalAlignment="Center"/>
                                        <TextBlock Text="TRANSFERENCIA" Foreground="White" FontSize="15"
                       Grid.Column="1" VerticalAlignment="Center"
                       HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                        <TextBlock Text="-980" Foreground="Red" FontSize="15"
                       FontWeight="Bold" Grid.Column="2"
                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Movimiento 4 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Iconos/deposito.png" Width="30" Height="30"
                   Grid.Column="0" VerticalAlignment="Center"/>
                                        <TextBlock Text="DEPÓSITO" Foreground="White" FontSize="15"
                       Grid.Column="1" VerticalAlignment="Center"
                       HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                        <TextBlock Text="1344" Foreground="White" FontSize="15"
                       FontWeight="Bold" Grid.Column="2"
                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Movimiento 5 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Iconos/transferencia.png" Width="30" Height="30"
                   Grid.Column="0" VerticalAlignment="Center"/>
                                        <TextBlock Text="TRANSFERENCIA" Foreground="White" FontSize="15"
                       Grid.Column="1" VerticalAlignment="Center"
                       HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                        <TextBlock Text="-670" Foreground="Red" FontSize="15"
                       FontWeight="Bold" Grid.Column="2"
                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Movimiento 6 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Iconos/transferencia.png" Width="30" Height="30"
                   Grid.Column="0" VerticalAlignment="Center"/>
                                        <TextBlock Text="TRANSFERENCIA" Foreground="White" FontSize="15"
                       Grid.Column="1" VerticalAlignment="Center"
                       HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                        <TextBlock Text="-234" Foreground="Red" FontSize="15"
                       FontWeight="Bold" Grid.Column="2"
                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Movimiento 7 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Iconos/deposito.png" Width="30" Height="30"
                   Grid.Column="0" VerticalAlignment="Center"/>
                                        <TextBlock Text="DEPÓSITO" Foreground="White" FontSize="15"
                       Grid.Column="1" VerticalAlignment="Center"
                       HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                        <TextBlock Text="1560" Foreground="White" FontSize="15"
                       FontWeight="Bold" Grid.Column="2"
                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Movimiento 8 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Iconos/deposito.png" Width="30" Height="30"
                   Grid.Column="0" VerticalAlignment="Center"/>
                                        <TextBlock Text="DEPÓSITO" Foreground="White" FontSize="15"
                       Grid.Column="1" VerticalAlignment="Center"
                       HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                        <TextBlock Text="1342" Foreground="White" FontSize="15"
                       FontWeight="Bold" Grid.Column="2"
                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Movimiento 9 -->
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Iconos/transferencia.png" Width="30" Height="30"
                   Grid.Column="0" VerticalAlignment="Center"/>
                                        <TextBlock Text="TRANSFERENCIA" Foreground="White" FontSize="15"
                       Grid.Column="1" VerticalAlignment="Center"
                       HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                        <TextBlock Text="-675" Foreground="Red" FontSize="15"
                       FontWeight="Bold" Grid.Column="2"
                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                        </Grid>
                    </ContentControl>
                </Grid>
            </Border>
        </DockPanel>
    </Border>
</Window>
