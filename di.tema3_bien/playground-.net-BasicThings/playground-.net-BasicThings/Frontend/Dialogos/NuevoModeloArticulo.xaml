<mah:MetroWindow 
        x:Class="playground_.net_BasicThings.Frontend.Dialogos.NuevoModeloArticulo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:materialDesignIcons="http://materialdesigninxaml.net/winfx/xaml/shared"

        WindowStartupLocation="CenterScreen"        
                 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:playground_.net_BasicThings.Frontend.Dialogos"
        mc:Ignorable="d"
        Title="NuevoModeloArticulo" Height="450" Width="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Background="#dd243c" Grid.ColumnSpan="2"/>
        <TextBlock Text="GESTIÓN MODELO ARTÍCULO"
                   FontSize="30"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Foreground="White"
                   Grid.ColumnSpan="2"
                   Grid.Row="0"/>

        <!-- NOMBRE -->
        <TextBox x:Name="txtNombre"
                 Grid.Row="2" Grid.Column="0"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 mat:HintAssist.Hint="Nombre (*)"
                 Width="250"
                 HorizontalAlignment="Left"
                 Margin="20,45,0,0"
                 FontWeight="Bold"
                 FontSize="13"
                 Foreground="Black"
                 Text="{Binding modeloArticulo.Nombre, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                 />

        <!-- MODELO -->
        <TextBox x:Name="txtModelo"
                 Grid.Row="3" Grid.Column="0"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 mat:HintAssist.Hint="Modelo"
                 Width="250"
                 HorizontalAlignment="Left"
                 Margin="20,45,0,0"
                 FontSize="13"
                 Foreground="Black"/>

        <!-- MARCA -->
        <TextBox x:Name="txtMarca"
                 Grid.Row="2" Grid.Column="1"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 mat:HintAssist.Hint="Marca (*)"
                 Width="250"
                 HorizontalAlignment="Left"
                 Margin="20,45,0,0"
                 FontWeight="Bold"
                 FontSize="13"
                 Foreground="Black"
                 Text="{Binding modeloArticulo.Marca,ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- TIPO -->
        <ComboBox
            x:Name="cmbTipoArticulo"
            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
            mat:HintAssist.Hint="Tipo*"
            FontWeight="Bold"
            Grid.Row="3"
            Grid.Column="1"
            HorizontalAlignment="Left"
            Margin="20,45,0,0"
            BorderBrush="Gray"
            ItemsSource="{Binding listaTipoArticulos}"
            SelectedItem="{Binding modeloArticulo.TipoNavigation,ValidatesOnDataErrors=True,
            NotifyOnValidationError=True}"
            DisplayMemberPath="Nombre"
            Foreground="Black"/>

        <!-- DESCRIPCIÓN -->
        <TextBox x:Name="txtDescripcion"
                 Grid.Row="4" Grid.ColumnSpan="2"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 mat:HintAssist.Hint="Descripción"
                 Width="550"
                 HorizontalAlignment="Left"
                 Margin="20,45,0,0"
                 FontSize="13"
                 Foreground="Black"
                 />

        <!-- BOTONES -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,30,0,0">

            <Button Content="CANCELAR"
                    Click="BtnCancelarModeloArticulo_Click"
                    Foreground="#dd243c"
                    Background="Transparent"
                    Width="120"
                    Margin="20,0"/>

            <Button Content="AÑADIR"
                    Click="BtnAnyadirModeloArticulo_Click"
                    Foreground="White"
                    Background="#dd243c"
                    Width="120"
                    Margin="20,0"
                    IsEnabled="{Binding HasErrors}"/>

        </StackPanel>

    </Grid>

    </mah:MetroWindow>

