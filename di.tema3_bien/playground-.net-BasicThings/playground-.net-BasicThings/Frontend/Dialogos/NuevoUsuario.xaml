<mah:MetroWindow 
        x:Class="playground_.net_BasicThings.Frontend.Dialogos.NuevoUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:materialDesignIcons="http://materialdesigninxaml.net/winfx/xaml/shared"
    
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:playground_.net_BasicThings.Frontend.Dialogos"
        mc:Ignorable="d"
        Title="NuevoUsuario" Height="350" Width="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Background="#dd243c" Grid.ColumnSpan="2"/>
        <TextBlock Text="GESTIÓN USUARIO"
               FontSize="30"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontWeight="Bold"
               Foreground="White"
               Grid.ColumnSpan="2"
               Grid.Row="0"/>

        <!-- NOMBRE -->
        <TextBox x:Name="txtNombre"
             Grid.Row="2" Grid.Column="0"
             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
             mat:HintAssist.Hint="Nombre (*)"
             Width="250"
             HorizontalAlignment="Left"
             Margin="20,45,0,0"
             FontWeight="Bold"
             FontSize="13"
             Foreground="Black"
             Text="{Binding usuario.Username, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
             />
        <!-- TIPO -->
        <ComboBox
            x:Name="cmbRol"
            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
            mat:HintAssist.Hint="Rol (*)"
            FontWeight="Bold"
            Grid.Row="3"
            Grid.Column="0"
            HorizontalAlignment="Left"
            Margin="20,45,0,0"
            BorderBrush="Gray"
            ItemsSource="{Binding listaRoles}"
            SelectedItem="{Binding usuario.RolNavigation,ValidatesOnDataErrors=True,
            NotifyOnValidationError=True}"
            DisplayMemberPath="Nombre"
            Foreground="Black"/>    

        <!-- MARCA -->
        <TextBox x:Name="txtClave"
             Grid.Row="2" Grid.Column="1"
             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
             mat:HintAssist.Hint="Contraseña (*)"
             Width="250"
             HorizontalAlignment="Left"
             Margin="20,45,0,0"
             FontWeight="Bold"
             FontSize="13"
             Foreground="Black"
             Text="{Binding usuario.Password,ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- TIPO -->
        <ComboBox
        x:Name="cmbTipoUsuario"
        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
        mat:HintAssist.Hint="Tipo Usuario (*)"
        FontWeight="Bold"
        Grid.Row="3"
        Grid.Column="1"
        HorizontalAlignment="Left"
        Margin="20,45,0,0"
        BorderBrush="Gray"
        ItemsSource="{Binding listaTiposUsuarios}"
        SelectedItem="{Binding usuario.TipoNavigation,ValidatesOnDataErrors=True,
        NotifyOnValidationError=True}"
        DisplayMemberPath="Nombre"
        Foreground="Black"/>


        <!-- BOTONES -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,30,0,0">

            <Button Content="CANCELAR"
                Click="BtnCancelarUsuario_Click"
                Foreground="#dd243c"
                Background="Transparent"
                Width="120"
                Margin="20,0"/>

            <Button Content="AÑADIR"
                Click="BtnAnyadirUsuario_Click"
                Foreground="White"
                Background="#dd243c"
                Width="120"
                Margin="20,0"
                IsEnabled="{Binding HasErrors}"/>

        </StackPanel>

    </Grid>

    </mah:MetroWindow>

