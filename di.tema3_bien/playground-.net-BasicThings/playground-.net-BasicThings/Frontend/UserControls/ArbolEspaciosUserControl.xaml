<UserControl x:Class="playground_.net_BasicThings.Frontend.UserControls.ArbolEspaciosUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:playground_.net_BasicThings.Frontend.UserControls"
             mc:Ignorable="d" 
             x:Name="arbolEspaciosUC"
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             
             
             xmlns:ent="clr-namespace:playground_.net_BasicThings.Backend.Modelos"
             
             
             d:DesignHeight="450" d:DesignWidth="800" Loaded="arbolEspacios_Loaded">
    
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <TextBlock Text="ADMINISTRACION DE ESPACIOS" FontSize="28" Foreground="DarkViolet" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="10"/>
        </Grid>
        <Grid DockPanel.Dock="Left">
            <!-- Arbol -->
            <TreeView ItemsSource="{Binding listaEspacios}" x:Name="treeEspacios">
                <!-- IMPORTANTE -->
                <TreeView.Resources>
                    <!-- Primer nivel -->
                    <HierarchicalDataTemplate DataType="{x:Type ent:Espacio}" 
                                              ItemsSource="{Binding Articulos}">
                        <StackPanel Orientation="Horizontal">
                            <mat:PackIcon Kind="Bathroom" Width="16"/>
                            <TextBlock Text="{Binding Nombre}" Margin="10,0,0,0"/>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat=" ({0})">
                                        <Binding Path="Articulos.Count" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <!-- Segundo nivel -->
                    <HierarchicalDataTemplate DataType="{x:Type ent:Articulo}" 
                                              ItemsSource="{Binding Salida}">
                        <StackPanel Orientation="Horizontal">
                            <mat:PackIcon Kind="PackageVariant" Width="16"/>
                            <TextBlock Text="{Binding Numserie}" Margin="10,0,0,0"/>
                            <TextBlock FontWeight="Bold">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat=" ({0})">
                                        <Binding Path="Salida.Count"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <!---->
                    <!--<HierarchicalDataTemplate DataType="{x:Type ent:Salida}">
                        
                    </HierarchicalDataTemplate>-->
                    <!---->
                    
                </TreeView.Resources>
            </TreeView>
        </Grid>
        <Grid DockPanel.Dock="Bottom">
            
        </Grid>
    </DockPanel>
</UserControl>
