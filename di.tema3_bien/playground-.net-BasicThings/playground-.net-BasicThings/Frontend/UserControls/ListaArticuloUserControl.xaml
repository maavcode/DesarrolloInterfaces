<UserControl x:Class="playground_.net_BasicThings.Frontend.UserControls.ListaArticuloUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:playground_.net_BasicThings.Frontend.UserControls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="DiagListaArticulos_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
            <Grid Grid.Row="0">
                <TextBlock
                Text="LISTADO DE ARTÍCULOS"
                FontSize="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Black"/>
            </Grid>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal">
               

                <TextBlock Text="Fecha Inicial:"
                           Foreground="Black"
                           VerticalAlignment="Center"/>

                <DatePicker SelectedDate="{Binding fechaInicial}"
                            x:Name="datePickerFechaInicial"
                            Width="150"
                            Margin="0,10,10,10"
                            VerticalAlignment="Center"/>

                <TextBlock Text="Fecha Final:"
                            Foreground="Black"
                            VerticalAlignment="Center"/>

                <DatePicker SelectedDate="{Binding fechaFinal}"
                            x:Name="datePickerFechaFinal"
                            Width="150"
                            VerticalAlignment="Center"/>

                <TextBlock Text="Nº SERIE:"
                           Foreground="Black"
                           FontWeight="Bold"
                           VerticalAlignment="Center" />

                <TextBox Text="{Binding textoNumeroSerie, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MahApps.Styles.TextBox}"
                         mah:TextBoxHelper.Watermark="Escribe un número de serie"
                         Width="180"
                         Margin="0,10,5,10"
                         x:Name="textoNumeroSerie"
                         TextChanged="textoNumeroSerie_TextChanged"
                         VerticalAlignment="Center"/>

                <TextBlock Text="ESPACIO:"
                           Foreground="Black"
                           FontWeight="Bold"
                           VerticalAlignment="Center" />

                <ComboBox ItemsSource="{Binding listaEspacios}"
                          SelectedItem="{Binding espacioSeleccionado}"
                          Style="{StaticResource MahApps.Styles.ComboBox}"
                          mah:TextBoxHelper.Watermark="Selecciona un espacio"
                          DisplayMemberPath="Nombre"
                          x:Name="cmbEspacio"
                          SelectionChanged="cmbEspacio_SelectionChanged"
                          Width="150"
                          Margin="0,0,0,0"
                          VerticalAlignment="Center"/>

                <TextBlock Text="RESULTADOS:"
                           Foreground="Black"
                           FontWeight="Bold"
                           VerticalAlignment="Center" />

                <Slider Minimum="1"
                        Maximum="{Binding maximoResultados}"
                        Value="{Binding totalResultados}"
                        Width="180"
                        x:Name="sliderResultados"
                        ValueChanged="sliderResultados_ValueChanged"
                        VerticalAlignment="Center"/>

                <TextBlock Text="{Binding totalResultados}"
                           Foreground="Black"
                           VerticalAlignment="Center" />

                <Button Content="FILTRAR"
                        Padding="10,5"
                        x:Name="btnFiltrar"
                        Click="btnFiltrar_Click" />

                <Button Content="LIMPIAR FILTROS"
                        Padding="10,5"
                        x:Name="btnLimpiarFiltros"
                        Click="btnLimpiarFiltros_Click" />
            </StackPanel>
            </Grid>

        <Grid Grid.Row="2">
                <DataGrid ItemsSource="{Binding listaArticulos}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      ColumnWidth="*">
                    <!--CanUserAddRows:para evitar que aparezca linea en blanco al final-->
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="NÚMERO DE SERIE"
                                        Binding="{Binding Numserie}"/>
                        <DataGridTextColumn Header="ESTADO"
                                        Binding="{Binding Estado}"/>
                        <DataGridTemplateColumn Header="FECHA ALTA">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <DatePicker SelectedDate="{Binding Fechaalta}"
                                            IsEnabled="False"
                                            BorderThickness="0"
                                            Background="Transparent"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="NOMBRE - APELLIDO">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding UsuarioaltaNavigation.Nombre}"/>
                                        <TextBlock Text=" "/>
                                        <TextBlock Text="{Binding UsuarioaltaNavigation.Apellido1}"/>
                                        <TextBlock Text=" "/>
                                        <TextBlock Text="{Binding UsuarioaltaNavigation.Apellido2}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="NOMBRE MODELO"
                                        Binding="{Binding ModeloNavigation.Nombre}"/>
                        <DataGridTextColumn Header="ESPACIO"
                                        Binding="{Binding EspacioNavigation.Nombre}"/>
                        <DataGridTemplateColumn Header="DPTO/PRÉSTAMOS">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Dpto:" FontWeight="Bold"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DepartamentoNavigation.Nombre}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Préstamos:" FontWeight="Bold"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Salida.Count}"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>

                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <Grid>
                                    <TextBlock Text="LISTADO DE PRESTAMOS DEL ARTICULO"
                                               FontSize="14" FontWeight="Bold"/>
                                </Grid>
                                <Grid>
                                    <ListBox ItemsSource="{Binding Salida}">
                                        <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="5">
                                                <TextBlock Text="Préstamo ID: " FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Idsalida}" Margin="0,0,10,0"/>
                                                <TextBlock Text="Usuario: " FontWeight="Bold"/>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} {1} {2}">
                                                            <Binding Path="UsuarioNavigation.Nombre"/>
                                                            <Binding Path="UsuarioNavigation.Apellido1"/>
                                                            <Binding Path="UsuarioNavigation.Apellido2"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                                <TextBlock Text=" - Fecha Préstamo: " FontWeight="Bold" Margin="10,0,0,0"/>
                                                <TextBlock Text="{Binding Fechasalida, StringFormat=d}"/>
                                                <TextBlock Text=" - Fecha Devolución: " FontWeight="Bold" Margin="10,0,0,0"/>
                                                <TextBlock Text="{Binding Fechadevolucion, StringFormat=d}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </DockPanel>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                </DataGrid>

            </Grid>
        
    </Grid>
</UserControl>
