<mah:MetroWindow x:Class="di.proyecto.clase._2025.Frontend_visual_.Dialogo.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.proyecto.clase._2025.Frontend_visual_.Dialogo"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Login" Height="460" Width="800">

    <Grid Background="#04113e">

        <!--Primero especificamos la cantidad de columnas que queremos, en este caso 2 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Ademas de dividirla en 8 filas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--FontSize para poner tamaño de letra-->
        <!--Foreground para poner color a la letra-->
        <!--Grid.ColumnSpan para comerse columnas-->

        <!-- Pomenos la imagen en la la columna 0, esta ocupara todas las filas-->
        <Image Source="/Recursos/Iconos/escudologin5.png"
           Grid.Column="0"
           Grid.RowSpan="8"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           Height="416"
           Width="367"
           Margin="26,10,0,0"/>

        <TextBlock Text="Welcome Folk"
               FontSize="32"
               Foreground="White"
               Grid.Column="1"
               Grid.Row="0"
               HorizontalAlignment="Center"
               Margin="10,20,10,10"/>
        <!-- WrapWithOverflow => para que salte de linea-->
        <TextBlock
        FontSize="11"
        Foreground="White"
        Grid.Column="1"
        Grid.Row="1"
        TextWrapping="WrapWithOverflow"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Margin="0,10,0,20">
        Welcome. Please login with your
        <LineBreak/>
        personal account information
        </TextBlock>

        <!-- Creamos el boton Sign in with Google -->
        <Button
        Background="#1976d3"
        BorderBrush="#1976d3"
        Foreground="White"
        Grid.Row="2"
        Grid.Column="1"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Width="235">
            <!-- StackPanel para colocar la imagen de la G y el texto -->
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                <Image
                    Source="Iconos/googleplus.png"
                    Width="20"
                    Height="20"
                    Margin="0,0,10,0"/>
                <TextBlock 
                    Text="Sign in with Google"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Margin="0,0,0,5"/>
            </StackPanel>
        </Button>

        <!-- Creamos una linea con -OR- -->
        <StackPanel
        Orientation="Horizontal"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Grid.Column="1"
        Grid.Row="3"
        Margin="0,10,0,0"
        Width="234">
            <!-- TAMBIEN SE PUEDE PONER SEPARATOR -->
            <!--            EJEMPLO
        <Separator 
            Grid.Row="3" 
            VerticalAlignment="Center" 
            Margin="10,20,30,20"/>
        <TextBlock 
            Text="OR" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Center" 
            Grid.Row="3" 
            Foreground="White"/>
        <Separator 
            Grid.Row="3" 
            Grid.Column="1" 
            VerticalAlignment="Center" 
            Margin="10,20,10,20"/>
        -->
            <!-- Linea izquierda -->
            <Rectangle 
             Fill="LightGray"
             Width="106"
             Height="1"
             VerticalAlignment="Center"/>
            <TextBlock
            Text=" OR "
            Grid.Column="1"
            Grid.Row="3"
            VerticalAlignment="Center"
            Foreground="White"
            Margin="0,10,0,25"/>
            <!-- Linea derecha-->
            <Rectangle
            Fill="LightGray"
            Width="106"
            Height="1"
            VerticalAlignment="Center"/>
        </StackPanel>
        <!-- Correo Electronico -->
        <TextBox
            x:Name="txtUsuario"
        Width="234"
        Height="35"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Grid.Column="1"
        Grid.Row="4"
        Foreground="LightGray"
        Margin="0,0,0,10"
        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
        mat:HintAssist.Hint="Email"/>

        <!-- Contraseña -->
        <PasswordBox
            x:Name="passClave"
        Width="234"
        Height="35"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Grid.Column="1"
        Grid.Row="5"
        Foreground="LightGray"
        Margin="0,0,0,10"
        Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
        mat:HintAssist.Hint="Password"/>

        <CheckBox
        Content="Remember me"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Foreground="LightGray"
        Grid.Column="1"
        Grid.Row="6"
        Margin="60,10,0,0"/>
        <Button
        Content="Forgot password?"
        Foreground="#1976d3"
        Background="Transparent"
        BorderBrush="Transparent"
        FontSize="10"
        HorizontalAlignment="Right" 
        VerticalAlignment="Top"
        Grid.Column="1"
        Grid.Row="6"
        Margin="0,5,50,10"/>
        <Button
        Content="Get Start"
        x:Name="btnLogin"
        Click="btnLogin_Click"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Width="100"
        Height="40"
        Background="#1976d3"
        Foreground="White"
        FontSize="15"
        Grid.Column="1"
        Grid.Row="7"
        Margin="60,10,0,10"/>
        <Button
        Content="Register"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Width="100"
        Height="40"
        Background="Transparent"
        BorderBrush="#1976d3"
        Foreground="#1976d3"
        FontSize="15"
        Grid.Column="1"
        Grid.Row="7"
        Margin="10,10,60,0"/>

    </Grid>
</mah:MetroWindow>
