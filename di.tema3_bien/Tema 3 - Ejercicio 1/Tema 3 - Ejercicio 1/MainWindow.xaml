<mah:MetroWindow x:Class="Tema_3___Ejercicio_1.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                 xmlns:materialDesignIcons="http://materialdesigninxaml.net/winfx/xaml/shared"
                 Icon="/matisse.png"
                 Title="INVENTARIO MATISSE"
                 Height="450" Width="800">
    <!--Iconos de los bordes-->
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button ToolTip="Cuenta">
                <materialDesign:PackIcon Kind="account"/>
            </Button>
            <Button ToolTip="Salir" x:Name="salir_window" Click="salir_Click">
                <materialDesign:PackIcon Kind="Logout"/>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <Grid Background="#252525">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--Menu de arriba que para nada tengo imagenes en vez de los de material design-->
        <Menu x:Name="prueba" HorizontalAlignment="Left" Height="Auto"
              VerticalAlignment="Top" Width="Auto" IsMainMenu="True"
              Background="#252525" Foreground="White" Grid.Row="0">
            <MenuItem Header="Prestamos">
                <MenuItem Header="Salidas">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Logout"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Entradas">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Login"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Listado Pendientes">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="ListBox"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Articulos">
                <MenuItem Header="Articulo Nuevo">
                    <MenuItem.Icon>
                        <Image Source="/caja.png" Width="20"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Editar">
                    <MenuItem.Icon>
                        <Image Source="/editar.png" Width="20"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Lista">
                    <MenuItem.Icon>
                        <Image Source="/listabien.png" Width="20"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Modelo Articulo Nuevo">
                    <MenuItem.Icon>
                        <Image Source="/PUSH.png" Width="20"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Modelo Articulo Editar">
                    <MenuItem.Icon>
                        <Image Source="/PULL.png" Width="20"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Lista Modelo Articulo">
                    <MenuItem.Icon>
                        <Image Source="/lista.png" Width="20"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Administración">
                <MenuItem Header="Gestión Usuarios">
                    <MenuItem Header="Nuevo">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="User"/>
                            <!--Las imagenes debian ser de aqui, no voy a rehacer todo ahora pero vaya-->
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Editar">
                        <MenuItem.Icon>
                            <Image Source="/edituser.png" Width="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Lista">
                        <MenuItem.Icon>
                            <Image Source="/lista.png" Width="20"></Image>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Contraseñas">
                    <MenuItem.Icon>
                        <Image Source="/password.png" Width="20"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Mantenimiento">
                    <MenuItem.Icon>
                        <Image Source="/maintenance.png" Width="20"/>
                    </MenuItem.Icon>
                    <MenuItem Header="Eliminar Articulo">
                        <MenuItem.Icon>
                            <Image Source="/trash.png" Width="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Eliminar Modelo Articulo">
                        <MenuItem.Icon>
                            <Image Source="/throw.png" Width="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Eliminar Usuario">
                        <MenuItem.Icon>
                            <Image Source="/deluser.png" Width="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Stock">
                        <MenuItem.Icon>
                            <Image Source="/stock.png" Width="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Listado Usuarios">
                        <MenuItem.Icon>
                            <Image Source="/users.png" Width="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Inventario">
                <MenuItem Header="Listado de espacios">
                    <MenuItem.Icon>
                        <Image Source="/house.png" Width="20"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Chequear Inventario">
                    <MenuItem.Icon>
                        <Image Source="/check.png" Width="20"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Inventario Nuevo">
                    <MenuItem.Icon>
                        <Image Source="/adduser.png" Width="20"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Información">
                <MenuItem Header="Informes">
                    <MenuItem.Icon>
                        <Image Source="/informes.png" Width="20"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Gráficos">
                    <MenuItem.Icon>
                        <Image Source="/stockinformacion.png" Width="20"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <ToolBar Grid.Row="1">
            <Button x:Name="salir" Click="salir_Click" ToolTip="Salir">
                <materialDesign:PackIcon Kind="LogoutVariant" Width="30" Height="30"/>
            </Button>
            <Button ToolTip="Entrar">
                <!--En vdd aun no tienen acciones salvo el de cerrar, es para recordarlo-->
                <materialDesign:PackIcon Kind="LoginVariant" Width="30" Height="30" Foreground="CadetBlue"/>
            </Button>
            <Button ToolTip="Explorar Ficheros">
                <materialDesign:PackIcon Kind="BoxCheck" Width="30" Height="30" Foreground="CornflowerBlue"></materialDesign:PackIcon>
            </Button>
            <Button ToolTip="Listar">
                <materialDesign:PackIcon Kind="ListBox" Width="30" Height="30" Foreground="White"></materialDesign:PackIcon>
            </Button>
            <Separator/>
            <TextBlock Text="Busca un articulo" Foreground="White" FontSize="14" VerticalAlignment="Center"
                       Margin="10,0"></TextBlock>
            <TextBox Width="140"></TextBox>
            <!--Jero ha dicho que por ahora es un textbox, lo haremos buscador mas adelante-->
        </ToolBar>
    </Grid>
</mah:MetroWindow>
