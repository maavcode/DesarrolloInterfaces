<mah:MetroWindow x:Class="Tema_3___Ejercicio_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:Tema_3___Ejercicio_5"
        xmlns:material="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        mc:Ignorable="d"
        Title="INVENTARIO MATISSE" Height="850" Width="1450"
        Icon="/res/matisse.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0,5*" />
            <RowDefinition Height="9,5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TabControl Grid.Row="1" TabStripPlacement="Left" Padding="1,0,0,0">
            <TabItem Height="80">
                <TabItem.Header>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <material:PackIcon Kind="ShieldStar" Width="80" Height="35" Margin="0,0,0,2"/>
                        <TextBlock Text="PRÉSTAMOS" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>


                <TabItem.Content>
                    <StackPanel Width="200" Orientation="Vertical">
                        <StackPanel.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFCC5500" Offset="0"/>
                                <GradientStop Color="#FFFF9933" Offset="1"/>
                            </LinearGradientBrush>
                        </StackPanel.Background>
                        <material:PackIcon Kind="ViewDashboard" Width="15" Height="15" Margin="10 16" Foreground="White"/>
                        <TextBlock Text="DAM MATISSE" Margin="40,-31,0,0"/>
                        <ListView x:Name="Prest" 
                          ItemsSource="{Binding Path=SubItems}" 
                          Foreground="White">
                            <ListViewItem Content="Entradas" 
                                  Padding="40 5" />
                            <Separator />
                            <ListViewItem Content="Salidas" 
                                  Padding="40 5" />
                            <Separator />
                            <ListViewItem Content="Búsqueda" 
                                  Padding="40 5" />
                            <Separator />
                            <ListViewItem Content="Listados Pendientes" 
                                  Padding="40 5" />
                            <Separator />
                        </ListView>
                    </StackPanel>
                </TabItem.Content>

            </TabItem>

            <TabItem Height="80">
                <TabItem.Header>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <material:PackIcon Kind="Cog" Width="95" Height="35" Margin="10,0,0,2"/>
                        <TextBlock Text="ADMINISTRACIÓN" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <StackPanel Width="200" Orientation="Vertical">
                        <StackPanel.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFCC5500" Offset="0"/>
                                <GradientStop Color="#FFFF9933" Offset="1"/>
                            </LinearGradientBrush>
                        </StackPanel.Background>
                        <material:PackIcon Kind="ViewDashboard" Width="15" Height="15" Margin="10 16" Foreground="White"/>
                        <TextBlock Text="DAM MATISSE" Margin="40,-31,0,0"/>
                        <ListView x:Name="Admin" 
      ItemsSource="{Binding Path=SubItems}" 
      Foreground="White">
                            <ListViewItem Content="Gestión Usuarios" 
              Padding="40 5" />
                            <Separator />
                            <ListViewItem Content="Contraseñas" 
              Padding="40 5" />
                            <Separator />
                            <ListViewItem Content="Mantenimiento" 
              Padding="40 5" />
                            <Separator />
                            <ListViewItem Content="Stock" 
              Padding="40 5" />
                            <Separator />
                            <ListViewItem Content="Listados" 
Padding="40 5" />
                            <Separator />
                        </ListView>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem Height="80">
                <TabItem.Header>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <material:PackIcon Kind="PackageVariant" Width="95" Height="35" Margin="0,0,0,0"/>
                        <TextBlock Text="INVENTARIO" VerticalAlignment="Center" Margin="10,0,0,2"/>
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <StackPanel Width="200" Orientation="Vertical">
                        <StackPanel.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFCC5500" Offset="0"/>
                                <GradientStop Color="#FFFF9933" Offset="1"/>
                            </LinearGradientBrush>
                        </StackPanel.Background>
                        <material:PackIcon Kind="ViewDashboard" Width="15" Height="15" Margin="10 16" Foreground="White"/>
                        <TextBlock Text="DAM MATISSE" Margin="40,-31,0,0"/>
                        <ListView x:Name="Inv" 
      ItemsSource="{Binding Path=SubItems}" 
      Foreground="White">
                            <ListViewItem Content="Listado Espacios" 
              Padding="40 5" />
                            <Separator />
                            <ListViewItem Content="Chequear" 
              Padding="40 5" />
                            <Separator />
                            <ListViewItem Content="Inventario nuevo" 
              Padding="40 5" />
                            <Separator />
                        </ListView>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem Height="80">
                <TabItem.Header>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <material:PackIcon Kind="Package" Width="95" Height="35" Margin="0,0,0,0"/>
                        <TextBlock Text="ARTÍCULOS" VerticalAlignment="Center" Margin="10,0,0,2"/>
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <StackPanel Width="200" Orientation="Vertical">
                        <StackPanel.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFCC5500" Offset="0"/>
                                <GradientStop Color="#FFFF9933" Offset="1"/>
                            </LinearGradientBrush>
                        </StackPanel.Background>
                        <material:PackIcon Kind="ViewDashboard" Width="15" Height="15" Margin="10 16" Foreground="White"/>
                  <TextBlock Text="DAM MATISSE" Margin="40,-31,0,0"/>
                  <ListView x:Name="Art" 
ItemsSource="{Binding Path=SubItems}" 
Foreground="White">
                      <ListViewItem Content="Artículos" 
        Padding="40 5" />
                      <Separator />
                      <ListViewItem Content="Modelo Artículo" 
        Padding="40 5" />
                      <Separator />
                      <ListViewItem Content="Tipo Artículo" 
        Padding="40 5" />
                      <Separator />
                  </ListView>
              </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem Height="80">
                <TabItem.Header>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <material:PackIcon Kind="ChartBar" Width="95" Height="35" Margin="0,0,0,0"/>
                        <TextBlock Text="INFORMACIÓN" VerticalAlignment="Center" Margin="10,0,0,2"/>
                    </StackPanel>
                </TabItem.Header>


                <TabItem.Content>
                    <StackPanel Width="200" Orientation="Vertical">
                        <StackPanel.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFCC5500" Offset="0"/>
                                <GradientStop Color="#FFFF9933" Offset="1"/>
                            </LinearGradientBrush>
                        </StackPanel.Background>
                        <material:PackIcon Kind="ViewDashboard" Width="15" Height="15" Margin="10 16" Foreground="White"/>
                        <TextBlock Text="DAM MATISSE" Margin="40,-31,0,0"/>
                        <ListView x:Name="Info" 
ItemsSource="{Binding Path=SubItems}" 
Foreground="White">
                            <ListViewItem Content="Informes" 
        Padding="40 5" />
                            <Separator />
                            <ListViewItem Content="Charts" 
        Padding="40 5" />
                            <Separator />
                        </ListView>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="Gray">
            <TextBlock Text="IES MATISSE" Foreground="White" FontSize="18" Padding="10" Grid.Row="0" VerticalAlignment="Center"/>
            <Button Content="Bienvenido" Foreground="White" BorderBrush="Gray" Margin="1200,0,120,0" Width="103" BorderThickness="0" Background="Transparent"/>
            <Button Content="Admin" Foreground="White" BorderBrush="Gray" Margin="1270,0,50,0" Width="74" BorderThickness="0" Background="Transparent"/>
            <Button 
        Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" 
        Background="Transparent" 
        BorderBrush="Transparent" 
        
                Margin="1360,0,40,0">
                <material:PackIcon Kind="CogBox" Height="22" Width="22" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
        </Grid>
    </Grid>
    
</mah:MetroWindow>
