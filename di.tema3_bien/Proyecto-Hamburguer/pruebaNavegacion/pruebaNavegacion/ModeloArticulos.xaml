<Window x:Class="pruebaNavegacion.ModeloArticulos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pruebaNavegacion"
             x:Name="diagModeloArticulo"
             Loaded="diagModeloArticulo_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Background="White">
        <Grid DockPanel.Dock="Top" >
            <TextBlock Text="Gestión Modelo Artículos" FontSize="24" FontWeight="Bold" TextAlignment="Center" Foreground="White" Background="Blue" Padding="20"/>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Los Campos en Negrita son Obligatiorios*" Grid.Row="0" Grid.Column="0" Margin="20,20,0,0" Foreground="Black" FontWeight="Bold"/>
            <TextBox x:Name="txtNombre" Grid.Row="1" Grid.Column="0" Margin="20" Height="30" Style="{StaticResource MaterialDesignFloatingHintTextBox}" mat:HintAssist.Hint="Nombre*" FontWeight="Bold" Foreground="Black"/>
            <TextBox x:Name="txtMarca" Grid.Row="1" Grid.Column="1" Margin="20" Height="30" Style="{StaticResource MaterialDesignFloatingHintTextBox}" mat:HintAssist.Hint="Marca*" FontWeight="Bold" Foreground="Black"/>
            <TextBox x:Name="txtModelo" Grid.Row="2" Grid.Column="0" Margin="20" Height="30" Style="{StaticResource MaterialDesignFloatingHintTextBox}" mat:HintAssist.Hint="Modelo"  Foreground="Black"/>
            <ComboBox x:Name="cmbTipoArticulo" DisplayMemberPath="Nombre" Grid.Row="2" Grid.Column="1" Margin="20" Height="30" Style="{StaticResource MaterialDesignFloatingHintComboBox}" mat:HintAssist.Hint="Tipo Artículo*" FontWeight="Bold" Foreground="Black"/>
            <TextBox x:Name="txtDescripcion" Grid.Row="3" Grid.ColumnSpan="2" Margin="20" Height="60" Style="{StaticResource MaterialDesignFloatingHintTextBox}" mat:HintAssist.Hint="Descripción"  Foreground="Black"/>
            <Button Click="btnModeloArticulo_Click" Grid.Row="4" Grid.Column="1" Content="CANCELAR" Width="150" Height="35" Margin="10" Background="White" Foreground="Blue" FontWeight="Bold" HorizontalAlignment="Left" BorderBrush="Blue"/>
            <Button Click="btnGuardar_Click" Grid.Row="4" Grid.Column="1" Content="GUARDAR" Width="150" Height="35" Margin="10" Background="Blue" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right"/>
        </Grid>
    </DockPanel>
</Window>
