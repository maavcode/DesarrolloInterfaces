<Window x:Class="pruebaNavegacion.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:pruebaNavegacion"
        Loaded="ventanaLogin_Loaded"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid Margin="30" Background="Blue">
        <StackPanel HorizontalAlignment="Left">
            <TextBlock Text="Bienvenidos !" FontSize="45" Margin="40,30,0,0" Foreground="White" FontWeight="Bold"/>
            <TextBlock Text="INVENTARIO MATISSE" FontSize="20" Margin="40,10,0,0" Foreground="White"/>
            <Image Source="/logo.png" Height="70" Margin="40,140,0,0" HorizontalAlignment="Left"/>
            <TextBlock Text="IES HENRI MATISSE" FontSize="15" Margin="40,10,0,0" Foreground="White"/>
        </StackPanel>
        <Border BorderBrush="Gray" BorderThickness="2" Width="253" Height="423" Margin="0,-20,48,-20" HorizontalAlignment="Right"/>
        <Grid Width="250" Height="420" Margin="0,-20,50,-20" Background="White" HorizontalAlignment="Right">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="LOGIN" FontSize="25" Margin="0,30,0,0" Foreground="Blue" HorizontalAlignment="Center"/>
            <TextBox Grid.Row="1" Margin="0,40,0,0" Width="200" Foreground="#606060"  mat:HintAssist.Hint="Nombre de Usuario" x:Name="txtUsuario"/>
            <PasswordBox Grid.Row="2" Margin="0,40,0,0" Width="200" Foreground="#606060" mat:HintAssist.Hint="Clave de Acceso" x:Name="passClave"/>
            <Button Grid.Row="3" Content="LOGIN" Width="200" Height="30" Margin="0,40,0,0" Background="Blue" Foreground="White" FontWeight="Bold" x:Name="btnLogin" Click="btnLogin_Ckick"/>
            <Button Grid.Row="4" Content="¿TIENES CUENTA?" Width="200" Height="30" Margin="0,40,0,0" Background="White" Foreground="Blue" FontWeight="Bold"/>
            <Button Grid.Row="5" Content="¿Olvidaste la Contraseña?" Cursor="Hand" FontSize="10" Width="200" Height="30" Margin="0,25,0,0" Background="Transparent" Foreground="Blue" BorderBrush="Transparent"/>
        </Grid>
    </Grid>
</Window>
