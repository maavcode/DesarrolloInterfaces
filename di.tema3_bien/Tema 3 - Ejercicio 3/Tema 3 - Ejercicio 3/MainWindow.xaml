<mah:MetroWindow x:Class="Tema_3___Ejercicio_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"           
        xmlns:local="clr-namespace:Tema_3___Ejercicio_3" 
        xmlns:material="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"      
        mc:Ignorable="d"
        Title="INVENTARIO MATISSE" Height="450" Width="800"
        Icon="/res/matisse.png">
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <material:PopupBox>
                <StackPanel MinWidth="160" Background="{DynamicResource MaterialDesignPaper}">
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Stretch"
                            Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Ajustes" Width="100" VerticalAlignment="Center"/>
                            <material:PackIcon Kind="HammerScrewdriver" Width="20" Height="20"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Stretch"
                            Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Cuenta" Width="100" VerticalAlignment="Center"/>
                            <material:PackIcon Kind="Account" Width="20" Height="20"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Stretch"
                            Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Ayuda" Width="100" VerticalAlignment="Center"/>
                            <material:PackIcon Kind="HelpCircleOutline" Width="20" Height="20"/>
                        </StackPanel>
                    </Button>

                    <Separator Margin="4"/>

                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"
                            HorizontalContentAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Desconectar" Width="100" VerticalAlignment="Center"/>
                            <material:PackIcon Kind="Power" Width="20" Height="20"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </material:PopupBox>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

    <DockPanel>
        <Grid DockPanel.Dock="Left" Background="#E5303030" Width="250">
            <StackPanel x:Name="Menu" Margin="10">
                <Grid>

                    <material:PackIcon Kind="ViewDashboard" Width="15" Height="15" Margin="10 16" Foreground="White"/>

                    <ListBoxItem x:Name="ListViewItemMenu" 
                                 Content="DAM MATISSE" 
                                 Padding="37 14" 
                                 FontSize="15" 
                                 Foreground="White"
                                 Style="{StaticResource MaterialDesignListBoxItem}" 
                                 Selected="ListViewItemMenu_Selected"/>
                </Grid>
                <Grid>

                    <material:PackIcon Kind="FileOutline" 
                                       Width="15" 
                                       Height="15" 
                                       Margin="10 16" 
                                       Foreground="White" />

                    <Expander IsExpanded="False" 
                              Width="210" 
                              HorizontalAlignment="Right" 
                              Style="{StaticResource MaterialDesignExpander}" 
                              Header="Préstamos" 
                              Background="{x:Null}" 
                              Foreground="White" >

                        <ListView x:Name="Prest" 
                      ItemsSource="{Binding Path=SubItems}" 
                      Foreground="White" 
                      Style="{StaticResource MaterialDesignListView}" 
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListViewItem Content="Salidas" 
                                          Padding="20 5" />
                            <ListViewItem Content="Entradas" 
                                          Padding="20 15" />
                            <ListViewItem Content="Búsqueda" 
                                          Padding="20 15" />
                            <ListViewItem Content="Listados Pendientes" 
                                          Padding="20 15" />
                        </ListView>
                    </Expander>
                </Grid>

                <Grid>

                    <material:PackIcon Kind="Folder" 
                         Width="15" 
                         Height="15" 
                         Margin="10 16" 
                         Foreground="White" />

                    <Expander IsExpanded="False" 
                              Width="210" 
                              HorizontalAlignment="Right" 
                              Style="{StaticResource MaterialDesignExpander}" 
                              Header="Artículos" 
                              Background="{x:Null}" 
                              Foreground="White" >

                        <ListView x:Name="Art" 
                                  ItemsSource="{Binding Path=SubItems}" 
                                  Foreground="White" 
                                  Style="{StaticResource MaterialDesignListView}" 
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListViewItem Content="Artículos" 
                                          Padding="20 5" />
                            <ListViewItem Content="Modelo Artículo" 
                                          Padding="20 15" />
                            <ListViewItem Content="Tipo de Artículo" 
                                          Padding="20 15" />
                        </ListView>
                    </Expander>
                </Grid>

                <Grid>

                    <material:PackIcon Kind="Settings" 
                                       Width="15" 
                                       Height="15" 
                                       Margin="10 16" 
                                       Foreground="White" />

                    <Expander IsExpanded="False" Width="210" 
                              HorizontalAlignment="Right" 
                              Style="{StaticResource MaterialDesignExpander}" 
                              Header="Administración" 
                              Background="{x:Null}" Foreground="White" >

                        <ListView x:Name="ListViewMenu" 
                                  ItemsSource="{Binding Path=SubItems}" 
                                  Foreground="White" 
                                  Style="{StaticResource MaterialDesignListView}" 
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListViewItem Content="Gestión Usuarios" 
                                          Padding="20 15" />
                            <ListViewItem Content="Contraseñas" 
                                          Padding="20 15" />
                            <ListViewItem Content="Mantenimiento" 
                                          Padding="20 15" />
                            <ListViewItem Content="Stock" 
                                          Padding="20 15" />
                            <ListViewItem Content="Listados" 
                                          Padding="20 15" />
                        </ListView>
                    </Expander>
                </Grid>
                <Grid>

                    <material:PackIcon Kind="ListBox"
                                       Width="15" 
                                       Height="15" 
                                       Margin="10 16" 
                                       Foreground="White" />
                    <Expander IsExpanded="False" 
                              Width="210" 
                              HorizontalAlignment="Right" 
                              Header="Inventario" 
                              Style="{StaticResource MaterialDesignExpander}"
                              Background="{x:Null}" 
                              Foreground="White">
                        <ListView ItemsSource="{Binding Path=SubItems}"
                                  Foreground="White" 
                                  Style="{StaticResource MaterialDesignListView}" 
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListViewItem Content="Listado de Espacios" 
                                          Padding="20 15" />
                            <ListViewItem Content="Chequear Inventario" 
                                          Padding="20 15" />
                            <ListViewItem Content="Inventario Nuevo" 
                                          Padding="20 15" />
                        </ListView>
                    </Expander>
                </Grid>

                <Grid>

                    <material:PackIcon Kind="Info"
                                Width="15" 
                                Height="15" 
                                Margin="10 16" 
                                Foreground="White" />
                    <Expander IsExpanded="False" 
                              Width="210" 
                              HorizontalAlignment="Right" 
                              Header="Información" 
                              Style="{StaticResource MaterialDesignExpander}"
                              Background="{x:Null}" 
                              Foreground="White">
                        <ListView ItemsSource="{Binding Path=SubItems}"
                                  Foreground="White" 
                                  Style="{StaticResource MaterialDesignListView}" 
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListViewItem Content="Información" 
                                          Padding="20 15" />
                            <ListViewItem Content="Gráficos" 
                                          Padding="20 15" />
                        </ListView>
                    </Expander>
                </Grid>

            </StackPanel>
        </Grid >
        <Grid>
        </Grid>
    </DockPanel>
</mah:MetroWindow>
