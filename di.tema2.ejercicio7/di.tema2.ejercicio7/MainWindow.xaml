<Window x:Class="di.tema2.ejercicio7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.tema2.ejercicio7"
        mc:Ignorable="d"
        WindowStyle="None" AllowsTransparency="True"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Ellipse Grid.Column="0"
                 Width="600" Height="600" 
                 VerticalAlignment="Center" Margin="-200,0, 0,0">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#ffda50"
                                  Offset="0"/>
                    <GradientStop Color="Orange"
                                  Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Margin="50,0,0,0">
            <TextBlock Text="IES HENRI MATISSE" Foreground="White" 
                       FontSize="30" FontWeight="Bold"/>
            <TextBlock Text="Aplicacion de Inventario" Foreground="White"
                       FontSize="20"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Column="1"
                    Margin="0, 20,0,20">
            <Image Source="/user.png" Width="100"/>
            
            <TextBlock Text="Introduce los datos" HorizontalAlignment="Center" Foreground="Gray"
                       Margin="0,20,0,0"/>
            
            <TextBox HorizontalAlignment="Center" Width="275" Margin="0,20,0,0"   
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"    
                     materialDesign:TextFieldAssist.HasClearButton="True"   
                     materialDesign:TextFieldAssist.TextFieldCornerRadius="25" 
                     Foreground="Gray" BorderBrush="Gray">
                <materialDesign:HintAssist.Hint>
                    <StackPanel Orientation="Horizontal" >
                        <materialDesign:PackIcon Kind="Email"/>
                        <TextBlock Text="Cuenta de Correo"/>
                    </StackPanel>
                </materialDesign:HintAssist.Hint>
            </TextBox>
            
            <PasswordBox HorizontalAlignment="Center" Width="275" Margin="0,20,0,0"
             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
             materialDesign:TextFieldAssist.HasClearButton="True"   
             materialDesign:TextFieldAssist.TextFieldCornerRadius="25" 
             Foreground="Gray" BorderBrush="Gray">
                <materialDesign:HintAssist.Hint>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="lock" />
                        <TextBlock Text="Clave de Acceso"/>
                    </StackPanel>
                </materialDesign:HintAssist.Hint>
            </PasswordBox>
            
            <Button Width="275" 
                    Content="Login" Foreground="White"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="20"
                    Margin="0,20,0,0">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#ffda50"
                                      Offset="0"/>
                        <GradientStop Color="OrangeRed"
                                      Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Nuevo Usuario?" VerticalAlignment="Center"
                           Foreground="Gray"/>
                <Button Content="Registrate" VerticalAlignment="Center"
                        Background="Transparent" Foreground="#ffda50"
                        BorderBrush="Transparent"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
