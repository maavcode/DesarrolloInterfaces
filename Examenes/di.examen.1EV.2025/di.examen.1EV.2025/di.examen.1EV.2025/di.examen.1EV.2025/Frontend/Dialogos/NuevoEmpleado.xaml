<Window x:Class="di.examen._1EV._2025.Frontend.Dialogos.NuevoEmpleado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.examen._1EV._2025.Frontend.Dialogos"
        mc:Ignorable="d"
        Title="NuevoEmpleado" Height="450" Width="800"
        WindowStyle="None"
        Loaded="diagNuevoEmpleado_Loaded">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <!-- Parte Derecha - Barra de ventana -->
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Background="Transparent" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Row="0">
            <Button Background="#ff5a82" BorderBrush="Transparent" VerticalAlignment="Top" Width="45" Click="Btn_Cerrar_Click">
                <Image Source="/Recursos/Iconos/cerrar.png"  Width="20"/>
            </Button>

            <Button Background="#6266f7" VerticalAlignment="Top" BorderBrush="Transparent" Width="45" Click="Btn_Maximizar_Click">
                <Image Source="/Recursos/Iconos/maximizar.png" Width="20"/>
            </Button>

            <Button Background="#05d79e" VerticalAlignment="Top" BorderBrush="Transparent" Width="45" Click="Btn_Minimizar_Click">
                <Image Source="/Recursos/Iconos/minimizar.png" Width="20"/>
            </Button>

        </StackPanel>
        <!-- Header -->
        <TextBlock Text="GESTIÓN DE EMPLEADOS" FontSize="25" FontWeight="Bold" TextAlignment="Center" Padding="0,0,0,20"
                   Grid.ColumnSpan="2" Grid.Row="1"/>
        <!-- Subtitulo -->
        <TextBlock Text="Los campos obligatorios se marcan en negrita" FontWeight="Bold" FontSize="10" TextAlignment="Left" Padding="10"
           Grid.Column="0" Grid.Row="2"/>
        
        <!-- DATOS PERSONALES -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="DATOS PERSONALES" Padding="20,0,0,0" FontSize="20"/>
        <Line
            X1="10"
            Y1="50"
            X2="790"
            Y2="50"
            Stroke="DarkGray"
            StrokeThickness="1"
            Margin="0,-20,0,0"
            Grid.ColumnSpan="2" Grid.Row="3"/>
        <!-- NOMBRE -->
        <TextBlock  Grid.Column="0" Grid.Row="4" Text="Nombre:" Margin="30,0,0,0" FontWeight="Bold"/>
        <TextBox Grid.Column="0" Grid.Row="5" Width="300" HorizontalAlignment="Left" Margin="30,0,0,10" Height="25" x:Name="txtNombre"/>
        <!-- PRIMER APELLIDO -->
        <TextBlock  Grid.Column="1" Grid.Row="4" Text="Primer apellido:" Margin="30,0,0,0" FontWeight="Bold"/>
        <TextBox Grid.Column="1" Grid.Row="5" Width="300" HorizontalAlignment="Left" Margin="30,0,0,10" Height="25" x:Name="txtApll1"/>
        <!-- SEGUNDO APELLIDO -->
        <TextBlock  Grid.Column="0" Grid.Row="6" Text="Segundo apellido:" Margin="30,0,0,0" />
        <TextBox Grid.Column="0" Grid.Row="7" Width="300" HorizontalAlignment="Left" Margin="30,0,0,10" Height="25" x:Name="txtApll2"/>
        <!-- CORREO ELECTRONICO -->
        <TextBlock  Grid.Column="1" Grid.Row="6" Text="Correo electrónico:" Margin="30,0,0,0" FontWeight="Bold"/>
        <TextBox Grid.Column="1" Grid.Row="7" Width="300" HorizontalAlignment="Left" Margin="30,0,0,10" Height="25" x:Name="txtCorreo"/>

        <!-- DATOS PROFESIONALES -->
        <TextBlock Grid.Row="8" Grid.Column="0" Text="DATOS PROFESIONALES" Padding="20,0,0,0" FontSize="20"/>
        <Line
    X1="10"
    Y1="50"
    X2="790"
    Y2="50"
    Stroke="DarkGray"
    StrokeThickness="1"
    Margin="0,-20,0,0"
    Grid.ColumnSpan="2" Grid.Row="8"/>
        <!-- EXTENSION -->
        <TextBlock  Grid.Column="0" Grid.Row="9" Text="Extension:" Margin="30,0,0,0" FontWeight="Bold"/>
        <TextBox Grid.Column="0" Grid.Row="10" Width="300" HorizontalAlignment="Left" Margin="30,0,0,10" Height="25" x:Name="txtExtension"/>
        <!-- PUESTO -->
        <TextBlock  Grid.Column="1" Grid.Row="9" Text="Puesto:" Margin="30,0,0,0" />
        <TextBox Grid.Column="1" Grid.Row="10" Width="300" HorizontalAlignment="Left" Margin="30,0,0,10" Height="25" x:Name="txtPuesto"/>
        <!-- JEFE -->
        <TextBlock  Grid.Column="0" Grid.Row="11" Text="Jefe:" Margin="30,0,0,0" />
        <ComboBox Grid.Column="0" Grid.Row="12" Width="300" HorizontalAlignment="Left" Margin="30,0,0,10" Height="25" x:Name="cmbJefe"/>
        <!-- OFICINA -->
        <TextBlock  Grid.Column="1" Grid.Row="11" Text="Oficina:" Margin="30,0,0,0" />
        <ComboBox Grid.Column="1" Grid.Row="12" Width="300" HorizontalAlignment="Left" Margin="30,0,0,10" Height="25" x:Name="cmbOficina"/>

        <Button Grid.Column="0" HorizontalAlignment="Right" Grid.Row="13" Margin="0,5,70,0" Width="100" Height="30" Background="Transparent" BorderBrush="Red" Foreground="Red"  FontWeight="SemiBold"
                Click="BtnCancelarEmpleado_Click">
            <TextBlock Text="Cancelar"/>
        </Button>
        <Button Grid.Column="1" HorizontalAlignment="Left" Grid.Row="13" Margin="30,5,0,0" Width="100" Height="30" Background="#6266f7" Foreground="White" FontWeight="SemiBold"
                Click="BtnGuardarEmpleado_Click">
            <TextBlock Text="Guardar"/>
        </Button>

    </Grid>
</Window>
