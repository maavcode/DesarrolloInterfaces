<Window x:Class="di.examen._1EV._2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.examen._1EV._2025"
        mc:Ignorable="d"
        Title="GESTIÓN JARDINERIA" Height="800" Width="1450"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Parte Izquierda -->
        <StackPanel Grid.Column="0" Background="#6266f7" HorizontalAlignment="Center" Width="200">
            <Button Background="Transparent" BorderBrush="Transparent" Width="50">
                <Image Source="/Recursos/Iconos/dashboard.png" Width="40" Margin="0,15,0,10" />
            </Button>
            <Button Background="Transparent" BorderBrush="Transparent" Width="50">
                <Image Source="/Recursos/Iconos/oficina.png" Width="40" Margin="0,15,0,10" />
            </Button>
            <Button Background="Transparent" BorderBrush="Transparent" Width="50">
                <Image Source="/Recursos/Iconos/admon.png" Width="40" Margin="0,15,0,10" />
            </Button>
            <Button Background="Transparent" BorderBrush="Transparent" Width="50">
                <Image Source="/Recursos/Iconos/pedidos.png" Width="40" Margin="0,15,0,10" />
            </Button>
            <Button Background="Transparent" BorderBrush="Transparent" Width="50" >
                <Image Source="/Recursos/Iconos/producto.png" Width="40" Margin="0,15,0,10" />
            </Button>
            <Button Background="Transparent" BorderBrush="Transparent" Width="50">
                <Image Source="/Recursos/Iconos/cliente.png" Width="40" Margin="0,15,0,10" />
            </Button>
            <Button Background="Transparent" BorderBrush="Transparent" Width="50" Click="Btn_NuevoEmpleado_Click">
                <Image Source="/Recursos/Iconos/empleado.png" Width="40" Margin="0,15,0,10" />
            </Button>
            <Button Background="Transparent" BorderBrush="Transparent" Margin="0,240,0,10" Width="50" >
                <Image Source="/Recursos/Iconos/salir.png" Width="50"/>
            </Button>
        </StackPanel>
        <!-- Parte Derecha -->
        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="15,0,0,0">
            <!-- Parte Derecha - Barra de ventana -->
            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Background="Transparent" VerticalAlignment="Top" >
                <Button Background="#ff5a82" BorderBrush="Transparent" VerticalAlignment="Top" Width="45" Click="Btn_Cerrar_Click">
                    <Image Source="/Recursos/Iconos/cerrar.png"  Width="20"/>
                </Button>
               
                <Button Background="#6266f7" VerticalAlignment="Top" BorderBrush="Transparent" Width="45" Click="Btn_Maximizar_Click">
                    <Image Source="/Recursos/Iconos/maximizar.png" Width="20"/>
                </Button>

                <Button Background="#05d79e" VerticalAlignment="Top" BorderBrush="Transparent" Width="45" Click="Btn_Minimizar_Click">
                    <Image Source="/Recursos/Iconos/minimizar.png" Width="20"/>
                </Button>

            </StackPanel>
            <!-- Bloque texto DASHBOARD -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="DASHBOARD" FontWeight="Bold" FontSize="20"/>
            </StackPanel>
            
            <!-- BLOQUE INFORMATIVO -->
            <StackPanel Orientation="Horizontal" Margin="0,50,0,0">
                <!-- TOTAL PEDIDOS -->
                <StackPanel Orientation="Vertical" Background="#6266f7" Width="300" Height="150" Margin="0,0,40,0">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Total Pedidos" Foreground="White" FontSize="15"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="300" Margin="0,10,0,10">
                        <Image Source="/Recursos/Iconos/pedidos.png" Width="50" HorizontalAlignment="Left"/>
                        <TextBlock Text="234" FontSize="30" Foreground="White" Width="240"
                                   TextAlignment="Right" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="300" Margin="5,10,0,10">
                        <TextBlock Text="Por mes" Foreground="White"/>
                        <TextBlock Text="102"  Foreground="White" Width="240"
                                    TextAlignment="Right" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- CLIENTES REGISTRADOS -->
                <StackPanel Orientation="Vertical" Background="#05D79E" Width="300" Height="150" Margin="0,0,40,0">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Clientes Registrados" Foreground="White" FontSize="15"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="300" Margin="0,10,0,10">
                        <Image Source="/Recursos/Iconos/cliente.png" Width="50" HorizontalAlignment="Left"/>
                        <TextBlock Text="45" FontSize="30" Foreground="White" Width="240"
                   TextAlignment="Right" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="300" Margin="5,10,0,10">
                        <TextBlock Text="Clientes contactados" Foreground="White"/>
                        <TextBlock Text="167"  Foreground="White" Width="175"
                    TextAlignment="Right" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- STOCK DE PRODUCTOS -->
                <StackPanel Orientation="Vertical" Background="#807fff" Width="300" Height="150" Margin="0,0,40,0">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Stock de Productos" Foreground="White" FontSize="15"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="300" Margin="0,10,0,10">
                        <Image Source="/Recursos/Iconos/producto.png" Width="50" HorizontalAlignment="Left"/>
                        <TextBlock Text="1456" FontSize="30" Foreground="White" Width="240"
                   TextAlignment="Right" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="300" Margin="5,10,0,10">
                        <TextBlock Text="Unidades por mes" Foreground="White"/>
                        <TextBlock Text="563"  Foreground="White" Width="190"
                    TextAlignment="Right" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- NUMERO DE OFICINAS -->
                <StackPanel Orientation="Vertical" Background="#ff5a82" Width="300" Height="150" Margin="0,0,40,0">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="Numero de oficinas" Foreground="White" FontSize="15"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="300" Margin="0,10,0,10">
                        <Image Source="/Recursos/Iconos/oficina.png" Width="50" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                        <TextBlock Text="23" FontSize="30" Foreground="White" Width="235"
                   TextAlignment="Right" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="300" Margin="5,10,0,10">
                        <TextBlock Text="En el pais" Foreground="White"/>
                        <TextBlock Text="10"  Foreground="White" Width="240"
                    TextAlignment="Right" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
            
            <!-- Bloque grafica -->
            <StackPanel Orientation="Horizontal">
                <!-- Imagen Jardineria -->
                <Image Source="/Recursos/Imagenes/jardineria.png" Width="750" Height="550"/>
                <!-- ImagenGrafico -->
                <Image Source="/Recursos/Imagenes/grafico.jpg" Width="550" Margin="15,0,0,0"/>
            </StackPanel>

        </StackPanel>
        

    </Grid>
</Window>
