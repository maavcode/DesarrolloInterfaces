<Window x:Class="di.tema2.ejercicio6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:di.tema2.ejercicio6"
        mc:Ignorable="d"
        WindowStyle="None" AllowsTransparency="True"
        Title="MainWindow" Height="520" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <!-- Parte izquierda -->
        <StackPanel Orientation="Vertical" Margin="0,40,0,0" Grid.Column="0" Width="290">
            <!-- Titulo / Descripcion -->
            <TextBlock Text="BIENVENIDO A"
                       HorizontalAlignment="Center" FontWeight="Bold"
                       FontSize="12"/>
            <TextBlock Text="INVENTARIO MATISSE"
                       HorizontalAlignment="Center" FontWeight="Normal" FontSize="25"
                       Foreground="OrangeRed" />
            <Image Source="/logoIESnegro.png" Width="30" />
            <TextBlock Text="Para entrar en la aplicación introduce primero tu usuario y contraseña. Puedes realizar el inicio de sesión con tus redes sociales."
                       TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" TextAlignment="Center" 
                       Foreground="Gray" Margin="0,0,0,10"/>
            <!-- Sign up / Sign in -->
            <TextBox HorizontalAlignment="Center" Width="275" Margin="0,10,0,0"   
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"    
                     materialDesign:TextFieldAssist.HasClearButton="True"   
                     materialDesign:TextFieldAssist.TextFieldCornerRadius="25" 
                     Foreground="Gray" BorderBrush="Gray">
                <materialDesign:HintAssist.Hint>
                    <StackPanel Orientation="Horizontal" >
                        <materialDesign:PackIcon Kind="user" />
                        <TextBlock>Nombre de usuario</TextBlock>
                    </StackPanel>
                </materialDesign:HintAssist.Hint>
            </TextBox>
            <PasswordBox HorizontalAlignment="Center" Width="275" Margin="0,10,0,0"
                         Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                         materialDesign:TextFieldAssist.HasClearButton="True"   
                         materialDesign:TextFieldAssist.TextFieldCornerRadius="25" 
                         Foreground="Gray" BorderBrush="Gray">
                <materialDesign:HintAssist.Hint>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="lock" />
                        <TextBlock Text="Clave de usuario"/>
                    </StackPanel>
                </materialDesign:HintAssist.Hint>
            </PasswordBox>
            <Button Width="275" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="20"
                    Background="OrangeRed" Margin="0,20,0,10">
                <TextBlock Text="LOGIN" FontWeight="Bold" Foreground="White"/>
            </Button>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="No tienes cuenta?" VerticalAlignment="Center"/>
                <Button Content="Sign in now" VerticalAlignment="Center" Background="Transparent" BorderBrush="Transparent"
                        Foreground="OrangeRed" FontSize="11"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <Separator Background="Gray" Width="120"/>
                <TextBlock Text="OR" Margin="10,0,10,0"/>
                <Separator Background="Gray" Width="120"/>
            </StackPanel>
            <!-- Iconos -->
            <TextBlock Text="Inicia sesion con redes sociales" HorizontalAlignment="Center" Foreground="Gray" FontSize="10" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        Background="White" Width="35" Height="35">
                    <Image Source="/facebook.png" Width="25"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        Background="White" Width="35" Height="35" Margin="10,0,0,0">
                    <Image Source="/twitter2.png" Width="25"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        Background="White" Width="35" Height="35" Margin="10,0,0,0">
                    <Image Source="/googleplus2.png" Width="25"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                        Background="White" Width="35" Height="35" Margin="10,0,0,0">
                    <Image Source="/instagram.png" Width="25"/>
                </Button>
            </StackPanel>
        </StackPanel>
        <!-- Parte derecha -->
        <Grid Grid.Column="1" Background="DarkRed">
            <Image Source="/Pasillo-exterior.jpg" Stretch="Fill" Opacity="0.3"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <Image Source="/logoIESblanco.png" Width="50" HorizontalAlignment="Center"/>
                <TextBlock Text="IES MATISSE" HorizontalAlignment="Center" Foreground="White" FontWeight="Normal" FontSize="30"/>
                <TextBlock Text="Con esta aplicación puedes realizar la entrada y salida de material, gestionar los usuarios, manejar el inventario del centro, informes y gráficos."
                           TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" Foreground="White" FontSize="10" Width="220" TextAlignment="Center"/>
            </StackPanel>
            
        </Grid>
    </Grid>
</Window>
