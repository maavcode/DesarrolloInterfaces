<Window x:Class="di.tema2.ejercicio3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:di.tema2.ejercicio3"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="300">
    <Grid>
        <!-- Definicion de columnas y filas -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>  
            <RowDefinition Height="auto"/>  
            <RowDefinition Height="auto"/>  
            <RowDefinition Height="auto"/>  
            <RowDefinition Height="auto"/>  
            <RowDefinition Height="auto"/>  
            <RowDefinition Height="auto"/>  
            <RowDefinition Height="auto"/>  
        </Grid.RowDefinitions>
        <!-- Hero -->
        <Image Source="/eme.png" Grid.ColumnSpan="2" Grid.Row="0"
               Height="100" Margin="100,20,100,20"/>
        <TextBlock Text="Sign in to your account" Grid.ColumnSpan="2" Grid.Row="1"
                   HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"
                   Margin="0,0,0,10"/>
        <!-- TextBox / PasswordBox Area -->
        <TextBox Grid.ColumnSpan="2" Grid.Row="2" HorizontalAlignment="Center"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                 materialDesign:HintAssist.Hint="Email" Width="225" FontWeight="Black"/>
        <PasswordBox Grid.ColumnSpan="2" Grid.Row="3" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                     Width="225" materialDesign:HintAssist.Hint="Password" FontWeight="Black"
                     Margin="0,0,0,10"/>
        <CheckBox Content="Remember me" IsChecked="True" Grid.Column="0" Grid.Row="4" 
                  HorizontalAlignment="Right" Margin="0,0,27,10" FontSize="10"/>
        <Button Content="Forgot Password?" Grid.Column="1" Grid.Row="4" 
                Background="Transparent" BorderBrush="Transparent"
                HorizontalAlignment="Right" Margin="0,0,15,10" FontSize="10"
                Foreground="#1976d3" />
        <!-- Sing in Area -->
        <Button Content="SIGN IN" Grid.ColumnSpan="2" Grid.Row="5" Width="215"
                Background="#1976d3" Foreground="White" FontSize="13"
                Margin="0,0,0,15"/>
        <TextBlock Text="OR" Grid.ColumnSpan="2" Grid.Row="6" 
                   HorizontalAlignment="Center" Foreground="Gray"
                   Margin="0,0,0,15"/>
        <Button Grid.Row="7" Grid.ColumnSpan="2" Width="215" Margin="0,0,0,15" 
                Background="#3b569a">
            <StackPanel Orientation="Horizontal">
                <Image Source="/facebookblanco.png" Width="15" Margin="0,0,10,0"/>
                <TextBlock Text="SIGN IN WITH FACEBOOOK" Foreground="White" FontSize="12"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button Grid.Row="8" Grid.ColumnSpan="2" Width="215" Margin="0,0,0,15"
                Background="#e14a34">
            <StackPanel Orientation="Horizontal">
                <Image Source="/googleplus.png" Width="15" Margin="0,0,10,0" />
                <TextBlock Text="SIGN IN WITH GOOGLE +" Foreground="White" FontSize="12"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <!-- Account -->
        <TextBlock Text="Don't have an accont?" Grid.Column="0" Grid.Row="9"
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   FontSize="10"/>
        <Button Content="Create an account" Grid.Column="1" Grid.Row="9"
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Background="Transparent" BorderBrush="Transparent"
                Foreground="#1976d3" FontSize="10"/>
    </Grid>
</Window>
