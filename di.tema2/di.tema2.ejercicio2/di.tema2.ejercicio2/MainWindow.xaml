<mah:MetroWindow x:Class="di.tema2.ejercicio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.tema2.ejercicio2"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="700">
    <Grid Background="#04113e">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <!-- 50% para cada grid -->
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Image Source="/escudologin5.png"/>
        </Grid>
        <Grid Grid.Column="1" Margin="40">
            <!-- Definicion de columnas del grid -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <!-- Definicion de filas del grid -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- Contenido -->
            <TextBlock Text="Welcome folk" HorizontalAlignment="Center" Grid.ColumnSpan="2" 
                       FontSize="36" Margin="10" Grid.Row="0"/>
            <TextBlock Text="Welcome. Please login with your personal account information" 
                       Grid.Row="1" HorizontalAlignment="Center" TextAlignment="Center" 
                       Grid.ColumnSpan="2" TextWrapping="WrapWithOverflow" Width="200"/>
            <Button Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" 
                    Background="#1976d3" BorderBrush="#1976d3" Margin="0,20,0,0" Width="220" Height="40">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/googleplus.png" Height="24"/>
                    <TextBlock Text="Sign in with Google" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <Separator Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="50,20,15,20"/>
            <TextBlock Text="OR" Grid.Row="3" Grid.ColumnSpan="2" TextAlignment="Center" VerticalAlignment="Center"/>
            <Separator Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="15,20,50,20"/>

            <TextBox Grid.ColumnSpan="2" Grid.Row="4" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Width="220" materialDesign:HintAssist.Hint="Email Address" />
            <PasswordBox Grid.Row="5" Grid.ColumnSpan="2" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                         Width="220" materialDesign:HintAssist.Hint="Password"/>
            
            <CheckBox Content="Remember me" Grid.Column="0" Grid.Row="6" 
                      Margin="25,20,10,0" Foreground="Gray"/>
            <Button Content="Forgot password?" Grid.Column="1" Grid.Row="6"
                    Margin="20,20,20,0" Background="Transparent" Foreground="#1976d3"
                    FontSize="8" BorderBrush="Transparent"/>

            <Button Content="Get Start" Grid.Column="0" Grid.Row="7" Margin="25,20,10,0"
                    Background="#1976d3" BorderBrush="#1976d3"/>
            <Button Content="Register" Grid.Column="1" Grid.Row="7" Margin="20,20,25,0"
                    Background="Transparent" BorderBrush="#1976d3" Foreground="#1976d3"/> 


        </Grid>
    </Grid>
</mah:MetroWindow>
