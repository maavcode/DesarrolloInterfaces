<Window x:Class="di.tema2.ejercicio4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.tema2.ejercicio4"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="MainWindow" Height="450" Width="700"
        WindowStyle="None"
        AllowsTransparency="True">
    <Grid>
        <!-- Definicion de columnas y filas -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>
        <!-- Parte Izquierda -->
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <!-- Imagen -->
            <Image Source="/portatil.jpg" Stretch="UniformToFill" Grid.Column="0"/>
            <!-- Texto -->
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left"
                        Margin="10,10,0,0" Grid.Column="0" Orientation="Horizontal">
                <Image Source="/logoIES.png" Width="20" Margin="0,0,10,0"/>
                <TextBlock Text="MATISSE" Foreground="White" FontWeight="Bold" FontSize="18"/>
            </StackPanel>
            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"
                       Text="Aplicación Inventario IES Henri Matisse" Foreground="White"
                       FontWeight="Bold" Grid.ColumnSpan="2" TextWrapping="WrapWithOverflow"
                       Width="200" FontSize="18" Margin="0,30,0,0"/>
        </Grid>
        <!-- Parte Derecha -->
        <Grid Grid.Column="1">
            <!-- Login Area -->
            <StackPanel Orientation="Vertical"
                         Margin="75,55, 150,0">
                <TextBlock Text="Login" FontSize="20" Margin="0,0,0,15" Foreground="White"/>
                <!-- Username -->
                <TextBlock Text="Username" Foreground="White"/>
                <TextBox Style="{StaticResource MahApps.Styles.TextBox}" Background="#343434" 
                         BorderBrush="Transparent" Margin="0,0,0,10" VerticalAlignment="Center"/>
                <!-- Password -->
                <TextBlock Text="Password" Foreground="White"/>
                <TextBox Style="{StaticResource MahApps.Styles.TextBox}" Background="#343434" 
                         BorderBrush="Transparent" Margin="0,0,0,20" VerticalAlignment="Center"/>

                <Button Background="#1976d3" Content="Login" Foreground="White"/>
                <Button Foreground="#1976d3" Background="Transparent" BorderBrush="Transparent"
                        Content="Forgot Password?"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right"  Margin="0,0,10,010"
                        Orientation="Horizontal">
                <Button Content="SIGN UP" Foreground="#1976d3" 
                        Background="Transparent" BorderBrush="Transparent"/>
                <Image Source="/icons8-contact-48.png" Width="20"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
